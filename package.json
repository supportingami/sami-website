{
  "name": "sami-website",
  "license": "see license.md",
  "workspaces": [
    "backend",
    "ci",
    "frontend",
    "scripts",
    "shared"
  ],
  "scripts": {
    "build": "yarn workspace backend start & yarn workspace frontend build",
    "build:frontend": "yarn workspace frontend build",
    "deploy": "npx vercel",
    "export:frontend": "yarn workspace frontend export",
    "format": "yarn format:code && yarn format:style",
    "format:code": "eslint . --ext .js,.jsx,.ts,.tsx --color --fix",
    "format:style": "prettier --write '**/*.{md,json,js,tsx,ts}'",
    "generate": "yarn workspace frontend generate && yarn pretty-quick",
    "lint": "yarn lint:style && yarn lint:code",
    "lint:code": "eslint . --ext .js,.jsx,.ts,.tsx --color",
    "lint:spell:TODO": "npx cspell \"**/*.md\" --config ./.cspell.json",
    "lint:style": "prettier --check '**/*.{md,json,js,tsx,ts}'",
    "release": "release-it",
    "scripts": "yarn workspace scripts start",
    "start": "yarn scripts dev start"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-sort-class-members": "^1.15.2",
    "eslint-plugin-unicorn": "^44.0.2",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "release-it": "^15.0.0",
    "typescript": "4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,tsx,ts}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.2.4",
  "engines": {
    "node": ">=14.x <=16.x"
  },
  "dependencies": {
    "sharp": "^0.30.7"
  }
}
